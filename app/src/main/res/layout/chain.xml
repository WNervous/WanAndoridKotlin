<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/btnA"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="A"
            app:layout_constraintRight_toLeftOf="@+id/btnB"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnB"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="B"
            android:layout_marginEnd="5dp"
            app:layout_constraintLeft_toRightOf="@id/btnA"
            app:layout_constraintRight_toLeftOf="@id/btnC"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnC"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/btnB"
            app:layout_constraintRight_toRightOf="parent"
            android:text="C"
            android:layout_marginStart="20dp"
            app:layout_constraintRight_toLeftOf="@id/btnD"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnD"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/btnC"
            app:layout_constraintRight_toRightOf="parent"
            android:text="D"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>